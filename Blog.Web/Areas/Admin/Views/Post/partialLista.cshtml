@model List<Blog.Dados.Models.TblPost>

<table class="table table-striped table-hover table-sm">
    <thead class="thead-default">
        <tr>
            <th scope="col" style="width:5%;">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Autor</th>
            <th scope="col">Categoria</th>
            <th scope="col">Data Interação</th>
            <th style="width:5%;"></th>
            <th style="width:5%;"></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var Item in Model)
            {
                <tr data-id="@Item.Id" scope="row">
                    <th scope="row">@Item.Id</th>
                    <td>@Item.Titulo</td>
                    <td>@Item.Autor.Nome</td>
                    <td>@Item.Categoria.Nome</td>
                    <td>@string.Format("{0:dd/MM/yyyy}", @Item.DataCadastro)</td>
                    <td><button class="btn border border-warning" type="submit" id="btnEditar" rel="tooltip" data-placement="top" title="Editar"><i class="fa fa-edit fa-lg"></i></button></td>
                    <td><button class="btn border border-danger" type="submit" id="btnExcluir" data-toggle="confirmation" rel="tooltip" data-placement="top" title="Excluir"><i class="fa fa-trash-alt fa-lg"></i></button></td>
                </tr>
            }
        }
    </tbody>
</table>